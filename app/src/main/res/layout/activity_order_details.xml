<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:drawablePadding="10dp"
            android:text="Order Details"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#0000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textviewDiscount"
            android:layout_width="370dp"
            android:layout_height="107dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mygrayborder"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/orderDate"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderDateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="10/04/2020"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/orderReference"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderRefInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="7HI5S"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-31dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/totalPrice"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderPriceInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="$ 62.00"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-31dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/status"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/statusInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="Delivered"
            android:textColor="#000"
            android:textSize="15sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myOrderDetailsList"
            android:layout_width="416dp"
            android:layout_height="608dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:itemPaddingBottom="5dp"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>