<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="280dp"
            android:layout_height="63dp"
            android:fontFamily="@font/alegreya_sans_extrabold"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_marginBottom="50dp" />

        <TextView
            android:id="@+id/inputFirstName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/firstname"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder" />

        <TextView
            android:id="@+id/inputLastName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/lastname"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder" />

        <TextView
            android:id="@+id/inputDestination"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/destination"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder" />

        <TextView
            android:id="@+id/inputAddressLine1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/addressline1"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder"/>

        <TextView
            android:id="@+id/inputAddressLine2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/addressline2"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder"/>

        <TextView
            android:id="@+id/inputPostalCode"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/postalcode"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/myblueborder"/>

        <TextView
            android:id="@+id/inputCity"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:hint="@string/city"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:paddingLeft="20dp"
            android:paddingVertical="8dp"
            android:background="@drawable/myblueborder"/>

        <Button
            android:id="@+id/btnBacktoLogin"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Back to Login"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/mygreybutton"
            android:fontFamily="@font/alegreya_sans_bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>