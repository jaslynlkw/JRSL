<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alegreya_sans_extrabold"
            android:text="KATIESTAR"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewDiscount"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:paddingVertical="5dp"
            android:text="My Account"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/OrdersOption"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingVertical="5dp"
            android:text="Orders"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#000"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/DetaisAndPasswordsOption"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingVertical="5dp"
            android:text="Details &amp; Password"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#000"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightgrey" />
        <TextView
            android:id="@+id/AddressOption"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingVertical="5dp"
            android:text="Address"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#000"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightgrey" />
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Sign Out"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/mygreybutton"
            android:fontFamily="@font/alegreya_sans_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        >
        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="34dp"
            android:layout_marginStart="355dp"
            android:contentDescription="Cart Image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cart" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>