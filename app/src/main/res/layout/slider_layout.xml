<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myblackborder"
        android:padding="10dp">

        <!--Image we will display is our slider view-->
    <FrameLayout
        android:id="@+id/pict"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >
        <ImageView
            android:id="@+id/myimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />
            </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_shadow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <TextView
                android:id="@+id/outfitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/alegreya_sans_bold"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/outfitDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/alegreya_sans_medium"
                android:padding="6dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#000" />

        </FrameLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>